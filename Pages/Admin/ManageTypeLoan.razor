@code {
    public Boolean countTable = false;
    public string grayColor = "#d3d5d4";
    public string whiteColor = "#ffffff";

    List<TypeLoan> ListLoan;
    TypeLoan selectLoan;

    public void CreateLoan()
    {
        NavigationManager.NavigateTo("/Admin/CreateTypeLoan");
    }


    protected override void OnInitialized()
    {
        ListLoan = new List<TypeLoan>();
        selectLoan = new TypeLoan();
        ListLoan = _context.TypeLoans.ToList<TypeLoan>();
    }

    public async Task checkedData(TypeLoan data)
    {
        Console.WriteLine(data);
        selectLoan = data;

        if (data.Active == 1)
        {
            data.Active = 0;
        }
        else
        {
            data.Active = 1;
        }
        _context.Update(data);

        await _context.SaveChangesAsync();

        ListLoan = new List<TypeLoan>();
        ListLoan = _context.TypeLoans.ToList<TypeLoan>();
    }
}





