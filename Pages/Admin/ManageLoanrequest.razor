                    <option value="7">กู้เพื่อประกอบกิจกรรมด้านวัฒนธรรม</option>
                    <option value="8">กู้เพื่อซื้อประกัน</option>
                    <option value="9">กู้เพื่อซ่อมแซมยานพาหนะ</option>
                    <option value="10">กู้เพื่อซ่อมแซมที่อยู่อาศัย</option>
                    <option value="11">กู้เพื่อตัดชุดขาว</option>
                    <option value="12">กู้เพื่อตัดชุดครุยบุคลากร</option>
                </select>
            </div>
        
        
            <div class="col-1 " style="text-align:end">
                <div class="font-color font-weight-bolder">สถานะ</div>
            </div>
            <div class="col-2 ">
                <select class="form-select" aria-label="Default select example">
                    <option selected>ทุกประเภท</option>
                    <option value="1">รอตรวจสอบ</option>
                    <option value="2">รอทำสัญญา</option>
                    <option value="3">รอดำเนินการ</option>
                   
                </select>
            </div>
        </div>

   

</div>


@code {
    public Boolean countTable = false;
    public string grayColor = "#d3d5d4";
    public string whiteColor = "#ffffff";

    public void SeeDetail()
    {
        NavigationManager.NavigateTo("./Admin/UserdataDetail");
    }
    public void checkrequest()
    {
        NavigationManager.NavigateTo("./Admin/RequestDetail");
    }
}
