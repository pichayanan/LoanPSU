        <tbody>
            <tr class="py-2" style="background-color:whitesmoke ;">
                <td class="text-center ">
                    รอตรวจสอบ
                </td>
                <td class="text-center">12 ก.ค.64/13.30</td>
                <td class="text-center">10000</td>
                <td class="text-center">ตัดชุดครุย</td>
                <td class="text-center">ดวงธิดา ชูมาลี</td>
                <td class="text-center">
                    <button class="btn button-color text-light shadow rounded" @onclick="checkrequest"
                           style="border-radius: 10px; width: 100px">ตรวจสอบ</button>



                </td>

            </tr>
            <tr class="py-2" style="background-color:whitesmoke ;" @onclick="SeeDetail">
                <td class="text-center ">
                    รอทำสัญญา
                </td>
                <td class="text-center">12 ก.ค.64/13.30</td>
                <td class="text-center">10000</td>
                <td class="text-center">เพื่อการศึกษาตนเอง</td>
                <td class="text-center">ดวงธิดา ชูมาลี</td>
                <td class="text-center">
                    <button class="btn button-color text-light shadow rounded" style="border-radius: 10px; width: 100px">พิมพ์</button>



                </td>

            </tr>
            <tr class="py-2" style="background-color:whitesmoke ;">
                <td class="text-center ">
                    รอดำเนินการ
                </td>
